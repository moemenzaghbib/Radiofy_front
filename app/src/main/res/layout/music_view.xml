<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_ground_image"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:layout_marginBottom="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageMV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon"
        app:shapeAppearanceOverlay="@style/curved"
        android:layout_marginStart="5dp"
        />
    <TextView
        android:id="@+id/songNameMv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/son_name"
        android:layout_toStartOf="@id/songDuration"
        android:layout_marginHorizontal="5dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@id/imageMV"/>
    <TextView
        android:id="@+id/songAlbumsMv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/son_name"
        android:layout_toStartOf="@id/songDuration"
        android:layout_marginHorizontal="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/imageMV"/>
    <TextView
        android:id="@+id/songDuration"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="@string/start_tv"
        android:layout_alignParentEnd="true"
        android:gravity="center"

        android:textColor="@color/black"/>
</RelativeLayout>