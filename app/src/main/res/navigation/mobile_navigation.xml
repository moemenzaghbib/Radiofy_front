<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/eventDetailFragment">

    <fragment
        android:id="@+id/eventDetailFragment"
        android:name="com.example.myapplication.fragments.EventDetailFragment"
        android:label="EventDetailFragment" >
        <argument
            android:name="eventItem"
            app:argType="com.example.myapplication.models.EventItem"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/home2"
        android:name="com.example.myapplication.fragments.Home"
        android:label="Home" >
        <action
            android:id="@+id/action_home2_to_eventDetailFragment"
            app:destination="@id/eventDetailFragment" />
    </fragment>
</navigation>